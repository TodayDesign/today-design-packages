{
  "compilerOptions": {
    "target": "es5",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": [
      "DOM"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": false,
    "declaration": true,
    "baseUrl": ".",
    "outDir": "dist",
    "declarationDir": "temp/types",
    "experimentalDecorators": true,
    "types": [
      "@types/node",
      "@nuxt/types"
    ]
  },
  "include": [
    "lib",
    "lib/**/*.ts",
    "lib/**/*.vue"
  ],
  "exclude": [
    "templates"
  ]
}