{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": [
      "DOM"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": false,
    "declaration": true,
    "baseUrl": ".",
    "outDir": "dist",
    "experimentalDecorators": true,
    "types": [
      "@types/node",
      "@nuxt/types"
    ],
    "paths": {
      "~/*": [
        "./*"
      ]
    }
  },
  "include": [
    "lib",
    "lib/**/*.ts"
  ],
  "exclude": [
    "templates"
  ]
}